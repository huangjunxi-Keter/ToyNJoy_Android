<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.google.android.material.imageview.ShapeableImageView
        style="@style/portraitImage"
        android:id="@+id/user_portrait"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_mine_unselected"
        app:shapeAppearanceOverlay="@style/circleImageStyle"
        app:strokeColor="@color/System"
        app:strokeWidth="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_portrait"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/user_portrait"
        android:paddingLeft="20dp"
        android:textColor="@color/System"
        android:textSize="20sp"
        android:text="@string/clickLogin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>