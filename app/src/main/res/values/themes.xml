<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToyNJoy" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/System</item>
        <!-- 信息栏颜色 -->
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_weaken</item>
        <item name="colorSecondaryVariant">@color/System_emphasize</item>
        <!-- 文字颜色 -->
        <item name="colorOnSecondary">@color/System_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ToyNJoy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ToyNJoy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ToyNJoy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

    </style>
</resources>